@model IEnumerable<DACS.Models.CV>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    Tìm Kiếm Việc Làm
                </h1>
                <!--Search box-->
                @* @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                <p style="font-size: 20px" class="text-white"> <span>Search by tags:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p> *@
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<div class="container pt-3 mb-3">
    <div class="flex justify-content-between">
        <h1>Quản lý CV</h1>
        <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
    </div>
    <table class="table mt-2">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenCV)</th>
                <th>@Html.DisplayNameFor(model => model.Users)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenCV)</td>
                    <td>@Html.DisplayFor(modelItem => item.Users.FullName)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FileCV))
                        {
                            <!-- Nút mở CV trong tab mới -->
                            <a href="@Url.Action("ViewCV", "CV", new { id = item.Id })" class="btn btn-success" target="_blank">Xem CV</a>
                        }
                        else
                        {
                            <span class="text-danger">Chưa có CV</span>
                        }
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
