@model IEnumerable<DACS.Models.Tinh>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-5">
	<h1>Danh sách tỉnh</h1>
	<p>
		<a asp-action="Create" class="btn btn-primary">Tạo mới</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>Tên tỉnh</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.TenTinh)</td>
					<td>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Chỉnh sửa</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

