@model DACS.Models.NhaTuyenDung

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h1>Chỉnh sửa</h1>

    <h4>Nhà thông tin nhà tuyển dụng</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="TenNTD" class="control-label">Tên nhà tuyển dụng</label>
                    <input asp-for="TenNTD" class="form-control" />
                    <span asp-validation-for="TenNTD" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SDT" class="control-label">Số điện thoại: </label>
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Email" class="control-label">Email: </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChucVu" class="control-label">Chức vụ</label>
                    <select asp-for="ChucVu" class="form-control" id="chucVuSelect">
                        <option value="Nhân viên">Nhân viên</option>
                        <option value="Quản lý">Quản lý</option>
                        <option value="Phó giám đốc">Phó giám đốc</option>
                        <option value="Giám đốc">Giám đốc</option>
                    </select>
                    <span asp-validation-for="ChucVu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenCty" class="control-label">Tên Công ty: </label>
                    <input asp-for="TenCty" class="form-control" />
                    <span asp-validation-for="TenCty" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="GiayPhepKinhDoanh">Ảnh Giấy phép kinh doanh</label>
                    <input type="file" asp-for="GiayPhepKinhDoanh" name="image1" class="form-control" id="imageInput1" />
                    <br>
                    <img id="imageInput1" src="#" alt="Preview Image" style="max-width: 200px; display: none;" />
                </div>
                <div class="form-group">
                    <label asp-for="MaSoThue" class="control-label">Mã số thuế: </label>
                    <input asp-for="MaSoThue" class="form-control" />
                    <span asp-validation-for="MaSoThue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TinhId" class="control-label">Tỉnh: </label>
                    <select asp-for="TinhId" class="form-control" asp-items="ViewBag.Tinh"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DiaDiem" class="control-label">Địa điểm: </label>
                    <input asp-for="DiaDiem" class="form-control" />
                    <span asp-validation-for="DiaDiem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Website" class="control-label">Website của công ty: </label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuyMo" class="control-label">Quy mô: </label>
                    <input asp-for="QuyMo" class="form-control" />
                    <span asp-validation-for="QuyMo" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="HinhAnhCty">Ảnh công ty: </label>
                    <input type="file" asp-for="HinhAnhCty" name="image2" class="form-control" id="imageInput2" />
                    <br>
                    <img id="imageInput2" src="#" alt="Preview Image" style="max-width: 200px; display: none;" />
                </div>
                <div class="form-group">
                    <label asp-for="ThongTinCty" class="control-label">Thông tin về công ty: </label>
                    <input asp-for="ThongTinCty" class="form-control" />
                    <span asp-validation-for="ThongTinCty" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="ImageDaiDien">Ảnh đại diện: </label>
                    <input type="file" asp-for="ImageDaiDien" name="image3" class="form-control" id="imageInput3" />
                    <br>
                    <img id="imageInput3" src="#" alt="Preview Image" style="max-width: 200px; display: none;" />
                </div>
                <div class="form-group pt-2">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>

