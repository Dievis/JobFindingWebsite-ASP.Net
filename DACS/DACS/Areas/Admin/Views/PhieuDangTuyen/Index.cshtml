@model IEnumerable<DACS.Models.PhieuDangTuyen>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class ="container-xxl flex-grow-1 container-p-y">
	<div class="card mb-5">
		<h1 class="card-header">Quản lý phiếu đăng tuyển</h1>
		@* <p>
		<a asp-action="Create">Create New</a>
		</p> *@
		<div class="table-responsive text-nowrap">
			<table class="table">
				<thead>
					<tr>
						<th>
							Tên nhà tuyển dụng
						</th>
						<th>
							Tên ngành
						</th>
						<th>
							Năm kinh nghiệm
						</th>
						<th>
							Tỉnh
						</th>
						<th>
							Tên việc làm
						</th>
						<th>
							Chức danh
						</th>
						<th>
							Mức lương
						</th>
						@* <th>
						@Html.DisplayNameFor(model => model.MoTa)
						</th> *@
						<th>
							Địa điểm
						</th>
						<th>
							Ngày lập phiếu
						</th>
						<th>
							Hạn nộp phiếu
						</th>
						<th>
							Trạng thái
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.NhaTuyenDungs.TenNTD)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TenNganh)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.NamKN)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Tinhs.TenTinh)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TenViecLam)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ChucDanh)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.MucLuong)
							</td>
							@* <td>
						@Html.DisplayFor(modelItem => item.MoTa)
						</td> *@
							<td>
								@Html.DisplayFor(modelItem => item.DiaDiem)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.NgayLapPhieu)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.HanNopHoSo)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Statuses.StatusName)
							</td>
							<td>
								<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> @* |
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a> *@
							</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>
