@model IEnumerable<DACS.Models.PhieuDangTuyen>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative" id="home">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row search-page-top d-flex align-items-center justify-content-center">
			<div class="banner-content col-lg-12">
				<h1 class="text-white">
					Tìm Kiếm Việc Làm
				</h1>
				<!--Search box-->
				@* @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
				<p style="font-size: 20px" class="text-white"> <span>Search by tags:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p> *@
				<form class="serach-form-area" asp-controller="PhieuDangTuyen" asp-action="Index">
					<div class="row justify-content-center form-wrap">
						<div class="col-lg-4 form-cols">
							<input type="text" class="form-control" id="inputPassword2" placeholder="Vị trí tuyển dụng" name="search">
						</div>
						<div class="col-lg-3 form-cols">
							<div class="default-select" id="default-selects">
								<select name="Tinh">
									<option>Tỉnh</option>
									@if (ViewBag.FilterTinhs != null)
									{
										foreach (var province in ViewBag.FilterTinhs)
										{
											<option value="@province.TenTinh" selected="@(ViewBag.SelectedTenTinh != null && ViewBag.SelectedTenTinh == province.TenTinh)">@province.TenTinh</option>
										}
									}
								</select>
							</div>
						</div>
						@* <div class="col-lg-3 form-cols">
						<div class="default-select" id="default-selects2">
						<select name="Nganh">
						<option>Select skill</option>
						@if (ViewBag.FilterNganhs != null)
						{
						@foreach (var skill in ViewBag.FilterNganhs)
						{
						<option value="@skill.Id" selected="@(ViewBag.SelectedNganhId != null && ViewBag.SelectedNganhId == skill.Id)">@skill.TenChuyenNganh</option>
						}
						}
						</select>
						</div>
						</div> *@
						<div class="col-lg-2 form-cols">
							<button type="submit" class="btn btn-info">
								<span class="lnr lnr-magnifier"></span> Tìm kiếm
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

<section class="post-area section-gap">
	<div class="container">
		<div class="row justify-content-center d-flex">
			<div class="col-lg-8 post-list">
				@foreach (var test in Model)
				{
					<div class="single-post d-flex flex-row">
						<div class="thumb">
							<img src="@Html.DisplayFor(modelItem => test.NhaTuyenDungs.ImageDaiDien)" width="200px" height="120px" alt="Alternate Text" />
							<ul class="tags">
								<li>
									@Html.DisplayFor(modelItem => test.TenNganh)
								</li>
								<li>
									@Html.DisplayFor(modelItem => test.Tinhs.TenTinh)
								</li>
								<li>
									@Html.DisplayFor(modelItem => test.MucLuong)
								</li>
							</ul>
						</div>
						<div class="details">
							<div class="title d-flex flex-row justify-content-between">
								<div class="titles">
									<a href="e:\hoctap\laptrinhweb\baikiemtra\hethan\doannhom2_ltweb-master\doannhom2_ltweb\views\phieudangtuyen\display.cshtml">
										<h4>@Html.DisplayFor(modelItem => test.TenViecLam)</h4>
									</a>
									<h6>@Html.DisplayFor(modelItem => test.NhaTuyenDungs.TenNTD)</h6>
								</div>
								<ul class="btns">
									<li><a href="#"><span class="lnr lnr-heart"></span></a></li>
									<li><a class="" asp-action="Details" asp-route-id="@test.Id">Ứng tuyển</a></li>
								</ul>
							</div>
							<p>
								@* @Html.DisplayFor(modelItem => test.MoTa) *@
							</p>
							<p class="address"><span class="lnr lnr-map"></span> @Html.DisplayFor(modelItem => test.DiaDiem)</p>
							<p class="address"><span class="lnr lnr-database"></span> @Html.DisplayFor(modelItem => test.MucLuong)</p>
						</div>
					</div>
				}
			</div>
			@Html.Partial("~/Views/Shared/_SidebarPartial.cshtml")
		</div>
	</div>
</section>
