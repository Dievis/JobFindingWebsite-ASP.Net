@model DACS.Models.PhieuDangTuyen

@{
    ViewData["Title"] = "DetailsPhieu";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}
<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    Tìm Kiếm Việc Làm
                </h1>
                <!--Search box-->
                @* @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                <p style="font-size: 20px" class="text-white"> <span>Search by tags:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p> *@
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<div class="container pt-3" style="font-family:Arial; font-size:18px">
    <h1>Chi tiết</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên ngành
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenNganh)
        </dd>
        <dt class = "col-sm-2">
            Mức lương
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MucLuong)
        </dd>
        <dt class = "col-sm-2">
            Năm kinh nghiệm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamKN)
        </dd>
        <dt class = "col-sm-2">
            Tỉnh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tinhs.TenTinh)
        </dd>
        <dt class = "col-sm-2">
            Tên công việc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenViecLam)
        </dd>
        <dt class = "col-sm-2">
            Chức danh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChucDanh)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            Địa điểm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaDiem)
        </dd>
        <dt class = "col-sm-2">
            Ngày Lập Phiếu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayLapPhieu)
        </dd>
        <dt class = "col-sm-2">
            Hạn nộp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HanNopHoSo)
        </dd>
        <dt class = "col-sm-2">
            Tên nhà tuyển dụng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NhaTuyenDungs.TenNTD)
        </dd>
    </dl>
</div>
<div class="container pt-2 mb-4">
    <a class="btn btn-primary" asp-controller="DonUngTuyen" asp-action="DetailsPhieu" asp-route-id="@Model.Id">Các Đơn Đã Nhận</a>
</div>
