@model IEnumerable<DACS.Models.NhaTuyenDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}
<!-- Start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row search-page-top d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    Tìm Kiếm Việc Làm
                </h1>
                <!--Search box-->
                @* @Html.Partial("../Shared/_SearchBoxPartial.cshtml")
                <p style="font-size: 20px" class="text-white"> <span>Search by tags:</span> Developer, Engineer, Technology, Support, Manager, Senior, Junior</p> *@
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start blog-posts Area -->
<section class="blog-posts-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list blog-post-list">
                <div class="single-post">
                    @foreach (var item in Model)
                    {
                        <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.ImageDaiDien)" alt="flag">
                        <hr />
                        <h3 style="text-align: center; margin-top: 10px; margin-bottom: 5px">
                            @Html.DisplayFor(modelItem => item.TenNTD)
                        </h3>
                        <div class="content-wrap">
                            <h6>Thông tin công ty:</h6>
                            <blockquote class="generic-blockquote">
                                <p>@Html.DisplayFor(modelItem => item.ThongTinCty)</p>
                            </blockquote>

                            <h6>Địa điểm:</h6>
                            <p>@Html.DisplayFor(modelItem => item.DiaDiem)</p>

                            <h6>Chức vụ:</h6>
                            <p>@Html.DisplayFor(modelItem => item.ChucVu)</p>

                            <h6>Tỉnh:</h6>
                            <p>@Html.DisplayFor(modelItem => item.Tinhs.TenTinh)</p>

                            <h6>Email:</h6>
                            <p>@Html.DisplayFor(modelItem => item.Email)</p>
                        </div>

                        <td>
                            <a class="btn btn-primary" asp-controller="PhieuDangTuyen" asp-action="Create">Đăng Tuyển</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Chỉnh sửa</a>
                        </td>
                    }

                    <hr />
                    <div class="bottom-meta">
                        <div class="user-details row align-items-center">
                            <div class="comment-wrap col-lg-6 col-sm-6">
                                @*<ul>
                                <li><a href="#"><span class="lnr lnr-heart"></span>	4 likes</a></li>
                                <li><a href="#"><span class="lnr lnr-bubble"></span> 06 Comments</a></li>
                                </ul>*@
                            </div>
                            <div class="social-wrap col-lg-6">
                                <ul>
                                    <li><a href="https://facebook.com/"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="https://twitter.com/"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="https://dribbble.com/"><i class="fa fa-dribbble"></i></a></li>
                                    <li><a href="https://behance.net/"><i class="fa fa-behance"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            @* @Html.Partial("~/Views/Shared/_SidebarPartial.cshtml") *@
</section>
<!-- End blog-posts Area -->
